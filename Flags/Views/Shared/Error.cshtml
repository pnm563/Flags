@model System.Web.Mvc.HandleErrorInfo
@using Common.Helpers;

@{
    ViewBag.Title = "Error";
}

@{
    Exception ex = @Model.Exception;
}

@{
    List<string> exceptionDetail = ExceptionInfo.RecurseInnerExceptions(ex);
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

<h2 class="text-danger">Exception source: @Model.Exception.Source</h2>

<h2 class="text-danger">Controller: @Model.ControllerName</h2>

<h2 class="text-danger">Action: @Model.ActionName</h2>

<h2 class="text-danger">Exception details:</h2>

@foreach (string detail in exceptionDetail)
{
    <h2 class="text-danger">@detail</h2>
}




